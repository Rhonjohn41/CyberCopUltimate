    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Neural network visualization
            function createNeuralNetwork() {
                const container = document.getElementById('networkVisualization');
                if (!container) return;
                
                // Clear existing content
                container.innerHTML = '';
                
                const nodes = [];
                const nodeCount = 20;
                
                // Create nodes
                for (let i = 0; i < nodeCount; i++) {
                    const node = document.createElement('div');
                    node.className = 'neural-node';
                    
                    // Random position
                    const x = Math.random() * 100;
                    const y = Math.random() * 100;
                    
                    node.style.left = `${x}%`;
                    node.style.top = `${y}%`;
                    
                    // Random size
                    const size = 4 + Math.random() * 8;
                    node.style.width = `${size}px`;
                    node.style.height = `${size}px`;
                    
                    // Pulse animation with random delay
                    node.style.animation = `pulse ${2 + Math.random() * 2}s infinite ${Math.random() * 2}s`;
                    
                    container.appendChild(node);
                    nodes.push({ element: node, x, y });
                }
                
                // Create connections between nodes
                for (let i = 0; i < nodes.length; i++) {
                    for (let j = i + 1; j < nodes.length; j++) {
                        // Only connect some nodes (not all-to-all)
                        if (Math.random() > 0.7) continue;
                        
                        const connection = document.createElement('div');
                        connection.className = 'neural-connection';
                        
                        const startX = nodes[i].x;
                        const startY = nodes[i].y;
                        const endX = nodes[j].x;
                        const endY = nodes[j].y;
                        
                        // Calculate length and angle
                        const dx = endX - startX;
                        const dy = endY - startY;
                        const length = Math.sqrt(dx * dx + dy * dy);
                        const angle = Math.atan2(dy, dx) * (180 / Math.PI);
                        
                        connection.style.width = `${length}%`;
                        connection.style.left = `${startX}%`;
                        connection.style.top = `${startY}%`;
                        connection.style.transform = `rotate(${angle}deg)`;
                        
                        // Subtle animation for data flow
                        connection.style.animation = `pulse ${3 + Math.random() * 3}s infinite ${Math.random() * 3}s`;
                        
                        container.appendChild(connection);
                    }
                }
            }
            
            // Create code rain effect
            function createCodeRain() {
                const containers = document.querySelectorAll('.code-rain');
                
                containers.forEach(container => {
                    // Clear existing content
                    container.innerHTML = '';
                    
                    const columns = 20;
                    
                    for (let i = 0; i < columns; i++) {
                        const column = document.createElement('div');
                        column.className = 'code-column';
                        
                        // Random content (binary or hex)
                        let content = '';
                        const isHex = Math.random() > 0.5;
                        const charCount = 5 + Math.floor(Math.random() * 10);
                        
                        for (let j = 0; j < charCount; j++) {
                            if (isHex) {
                                content += '0123456789ABCDEF'[Math.floor(Math.random() * 16)];
                            } else {
                                content += Math.random() > 0.5 ? '1' : '0';
                            }
                            content += '<br>';
                        }
                        
                        column.innerHTML = content;
                        
                        // Random position and animation
                        column.style.left = `${i * (100 / columns)}%`;
                        column.style.animationDuration = `${3 + Math.random() * 5}s`;
                        column.style.animationDelay = `${Math.random() * 2}s`;
                        
                        container.appendChild(column);
                    }
                });
            }
            
            // Create encryption visualization
            function createEncryptionGrid() {
                const containers = document.querySelectorAll('.encryption-grid');
                
                containers.forEach(container => {
                    // Clear existing content
                    container.innerHTML = '';
                    
                    const cellCount = 100;
                    
                    for (let i = 0; i < cellCount; i++) {
                        const cell = document.createElement('div');
                        cell.className = 'encryption-cell';
                        
                        // Random appearance
                        const isHighlighted = Math.random() > 0.8;
                        
                        if (isHighlighted) {
                            cell.style.backgroundColor = '#D4AF37';
                        } else {
                            cell.style.backgroundColor = `rgba(212, 175, 55, ${0.2 + Math.random() * 0.5})`;
                        }
                        
                        // Random animation
                        cell.style.setProperty('--init-opacity', 0.2 + Math.random() * 0.7);
                        cell.style.animationDuration = `${1 + Math.random() * 3}s`;
                        cell.style.animationDelay = `${Math.random() * 2}s`;
                        
                        container.appendChild(cell);
                    }
                });
            }
            
            // Initialize visualizations
            createNeuralNetwork();
            createCodeRain();
            createEncryptionGrid();
            
            // Resize handler for responsive visualizations
            window.addEventListener('resize', () => {
                createNeuralNetwork();
            });
        });
    </script>
</body>
</html>
